<div class="row">
  <div class="span12">
    <div class="page-header">
      <h1>BCAHL Photo Galleries</h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="span12 photos-container content-area">
    <% @galleries.each do |gallery| %>
      <a class="photo-container" href="<%= gallery_url(gallery) %>">
        <%= image_tag gallery.cover_photo_path %>
        <div class="photo-description">
          <p><%= gallery.name %></p>
        </div>
      </a>
    <% end %>
  </div>
</div>