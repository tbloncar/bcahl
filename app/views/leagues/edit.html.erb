<div class="row">
	<div class="page-header span12">
		<h1>Manage League: <%= @league.name %></h1>
		<div class="manage-resource-options">
			<%= link_to "Delete League", league_url(@league.path), method: :delete, class: "manage-resource-option delete-option" %>
		</div>
	</div>
</div>
<div class="row">
	<div class="span12">
		<div class="manage-row-header">
			<h2>Manage Seasons</h2>
		</div>
		<div class="manage-row-options">
			<% @league.seasons.each do |season| %>
				<a href="<%= edit_season_url(@league.path, season.path) %>" class="manage-row-edit manage-row-option">
					<h3><%= season.name %></h3>
				</a>
			<% end %>
		</div>
		<div class="manage-resource-tools">
			<a href="<%= new_season_url %>" class="manage-resource-tool">Add Season</a>
		</div>
	</div>
</div>
<div class="row">
	<div class="span12">
		<div class="manage-row-header">
			<h2>Edit League Details</h2>
		</div>
		<%= render 'form', form_action: league_url(@league.path), form_method: "patch", form_button: "Update League"  %>
	</div>
</div>