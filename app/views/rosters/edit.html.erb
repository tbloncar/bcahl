<div class="row">
	<div class="page-header span12">
		<h1>Edit Roster: <%= @roster.team.name %></h1>
		<a href="<%= roster_url(@roster.season.league.path, @roster.season.path, @roster.team.path) %>" class="manage-view-option">
			View Roster
		</a>
	</div>
</div>
<div class="row">
	<div class="span8">
		<table class="team-roster">
			<thead>
				<th>Name</th>
				<th>Delete Player</th>
			</thead>
			<tbody>
				<% @roster.roster_spots.each do |roster_spot| %>
					<tr>
						<td><%= roster_spot.player.full_name %></td>
						<td><%= link_to "Remove Player", roster_spot_url(roster_spot.id), method: "delete" %></td>
					</tr>
				<% end %>
				<tr>
					<td colspan="5">
						<%= form_tag roster_spots_url do %>
							<%= text_field_tag :player_name, nil, data: { autocomplete_source: players_path } %>
							<%= hidden_field_tag :roster_id, @roster.id %>
							<%= submit_tag "Add Player to Roster" %>
						<% end %>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="span4">
		<%= link_to "Remove Roster", roster_url(@roster.season.league.path, @roster.season.path, @roster.team.path), method: "delete" %>
	</div>
</div>