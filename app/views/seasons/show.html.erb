<div class="row">
	<div class="page-header span12">
		<h1><%= "#{@season.name} - #{@season.league.name}" %></h1>
		<% if current_user %>
			<a href="<%= edit_season_url(@season.league.path, @season.path) %>" class="manage-edit-option">
				Edit Season
			</a>
		<% end %>
	</div>
</div>
<div class="row">
	<div class="span12">
		<table class="team-roster">
			<thead>
				<th>Team</th>
				<th>Games Played</th>
				<th>Wins</th>
				<th>Losses</th>
				<th>OT</th>
				<th>Points</th>
				<th>GF</th>
				<th>GA</th>
			</thead>
			<tbody>
				<% @season.rosters.each do |roster| %>
					<tr>
						<td><%= link_to roster.team.name, roster_url(roster.season.league.path, roster.season.path, roster.team.path) %></td>
						<td><%= roster.games_played %></td>
						<td><%= roster.wins %></td>
						<td><%= roster.losses %></td>
						<td><%= roster.ot_losses %></td>
						<td><%= roster.points %></td>
						<td><%= roster.goals_for %></td>
						<td><%= roster.goals_against %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>